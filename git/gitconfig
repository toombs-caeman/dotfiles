[alias]
	# list all aliases
	alias = config --get-regexp alias

	# abbreviations
	co = checkout
	
	root = !pwd
	tree = log --graph --all --oneline --color

	# fuzzy find filenames
	file = "!f=$PWD/$(fzf) && echo $f"
	search = "!echo $PWD/$(rg "$*" | fzf | cut -f1 -d":" ) #"

